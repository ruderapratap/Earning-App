<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_second"
    tools:context=".Fragmemts.SpinFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/dark_yellow"
            android:layout_marginStart="20dp"
            android:src="@drawable/man_ic"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_name_"
            android:textSize="16sp"
            android:maxLength="25"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp"
                android:background="?selectableItemBackground"
                android:id="@+id/withdrawal_coin"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/coin_ic"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/coin_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/white"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_chance"
            android:textSize="30sp"
            android:fontFamily="@font/open_sans_samibold"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/open_sans_samibold"
            android:textSize="30sp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:src="@drawable/spinner_background" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/spinner_wheel"
            android:layout_width="250dp"
            android:fitsSystemWindows="true"
            android:layout_marginTop="34dp"
            android:layout_centerHorizontal="true"
            android:layout_height="250dp"
            android:src="@drawable/wheel" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/spinner_arrow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:paddingBottom="80dp"
            android:src="@drawable/arrow" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spin_btn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/spin"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_yellow"
        android:background="@drawable/bg_category"
        android:layout_gravity="center"/>



</androidx.appcompat.widget.LinearLayoutCompat>